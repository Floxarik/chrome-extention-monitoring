{
  "manifest_version": 3,
  "name": "Extension Monitor",
  "version": "1.0",
  "description": "Monitors specified extensions and notifies if they are disabled.",
  "permissions": ["storage", "management", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
